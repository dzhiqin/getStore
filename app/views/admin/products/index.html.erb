<h2>product list</h2>
<div class="pull-right" style="padding-bottom:20px;">
  <%=link_to("new product",new_admin_product_path,class:"btn btn-primary btn-sm")%>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th >product pic</th>
      <th>name</th>
      <th>price</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
    <%@products.each do |product|%>
      <tr>
        <td><%=product.id%></td>
        <td>
          <%=link_to admin_product_path(product) do%>
            <%if product.product_img.present?%>
              <%=image_tag(product.product_img.thumb.url,class:"thumbnail")%>
            <%else%>
              <%=image_tag("http://placehold.it/200x200&text=No Pic",class:"thumbnail")%>
            <%end%>
          <%end%>
        </td>
        <td><%=product.title%></td>
        <td><%=product.price%></td>
        <td><%=link_to('Edit',edit_admin_product_path(product),class:"btn btn-danger btn-sm")%></td>
      </tr>
    <%end%>
  </tbody>
</table>
