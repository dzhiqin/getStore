<div class="row">
  <div class="col-md-6">
    <%if @product.product_img.present?%>
      <%=image_tag(@product.image.medium.url,class:"thumbnali")%>
    <%else%>
      <%=image_tag("http://placehold.it/400x400&text=No Pic",class:"thumbnail")%>
    <%end%>
  </div>
  <div class="col-md-6">
    <h2><%=@product.title%></h2>
    <div class="" style="height:100px;">
      <p><%=@product.description%></p>
    </div>
    <div class="">
      数量：<%=@product.quantity%>
    </div>
    <div class="product-price">
      ¥ <%=@product.price%>
    </div>
  </div>
</div>
