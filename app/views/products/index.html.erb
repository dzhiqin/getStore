<%@products.each do |product|%>
  <div class="col-xs-6 col-md-3">
    <%=link_to product_path(product) do%>
      <div class="thumbnail " style="padding:20px 0;">
        <%if product.product_img.present?%>
          <%=image_tag(product.product_img.thumb.url,class:"thumbnail img-responsive")%>
        <%else%>
          <%=image_tag("http://placehold.it/400x400&text=No Pic")%>
        <% end %>
        <h5><%=product.title%> Â¥ <%=product.price%></h5>
      </div>

    <%end%>

  </div>
<%end %>
