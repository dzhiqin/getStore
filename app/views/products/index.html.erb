<%@products.each do |product|%>
  <div class="col-xs-6 col-md-3">
    <%=link_to product_path(product) do%>
      <div class="gallery gallery-product">
        <%if product.product_img.present?%>
          <%=image_tag(product.product_img.thumb.url,class:" img-responsive",style:"width:100%;")%>
        <%else%>
          <%=image_tag("http://placehold.it/400x400&text=No Pic")%>
        <% end %>
        <div class="product-select">
          <h4><%=product.title%></h4>
          <p> Â¥ <%=product.price%></p>
        </div>

        <div class="row">
					<div class="col-md-6">
						<a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> Like</a>
					</div>
					<div class="col-md-6">
						<a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a></div>
				</div>
      </div>



    <%end%>

  </div>
<%end %>
